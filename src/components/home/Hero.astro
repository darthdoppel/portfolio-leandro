---
import { IHeroProps } from "@types";

const { name, about } = Astro.props as IHeroProps;
---

<section>
  <h1 class="leading-normal -mb-2">{name}</h1>
  <h2 class="text-xl md:text-2xl font-semibold text-blue-400 dark:text-yellow-100 mt-4 mb-2">
    FullStack Developer
  </h2>
  <p class="dark:text-light text-lg mb-16">
    {about}
  </p>
</section>
